@page
@model Practica_3__Desarrollo_web_ASP.NET_Core_.Pages.Calculo_de_PrestamoModel
@{

    /*   Cree un proyecto ASP.Net Web App que:



    1) Una pagina con un formulario para monto, cantidad de cuotas, y porcentaje
    de interés anual de un préstamo y calcule la cuota mensual. (Amortizar mediante
    el sistema francés)*/


    double a;
    double b;
    double r;
    double num1 = Model.NumeroCuotas;
    double num2 = Model.TasaPrestamo;
    double num3 = Model.Capital;

   
    num2 = num2 / (12);

    int i = 1;
    a = 1 / (1 + num2);
    b = a;
    //Console.WriteLine("(1+i)^n para n={0} es {1}", i,a); 
    while (i < num1)
    {
        a = a * b;
        // Console.WriteLine("(1+i)^n n={0} es {1}",i+1, a); 
        i = i + 1;
    }
    r = (num3 * num2) / (1 - (a));
    
}

<div>
    <form method="get">
        <input type="type" name="Inicial" value="Cantidad Tomada" />
        <input type="type" name="Numero" value="Número de Cuotas" />
        <input type="type" name="Tasa" value="Tasa en Decimal" />
        <input type="submit" value="Actualizar " />

    </form>

    <p>Monto a Tomar Prestado: @Model.Capital</p>
    <p>Número de Cuotas: @Model.NumeroCuotas</p>
    <p>Tasa Mensual en Decimal : @Model.TasaPrestamo</p>
    <p>Cuota Mensual a Pagar : @r</p>

</div>

